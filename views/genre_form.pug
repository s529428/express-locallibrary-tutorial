extends layout

block content
    h1 #{title}
    form(method='POST' action='')
    div.form-group
        label(for="name") Genre:
        input#name.form-control(type="text", placeholder='Science Fiction' name='name' value=(undefined==genre ? '': genre.name))
    button.btn.btn-primary(type='submit') Add

    if errors
        ul
            for error in errors
            li=error.msg